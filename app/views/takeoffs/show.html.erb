<% title "Takeoff" %>

<div class="takeoffs">
  <h1 class="page_title"><%= current_project.name %></h1>
  
  <p>
    Division <%= @takeoff.division %> - <%= @takeoff.trade %>
    <span class ="small"> |
      <%= link_to "Edit", edit_takeoff_path(@takeoff), :class=>"small" %> |
      <%= link_to "Delete", @takeoff, :confirm => 'Are you sure?', :method => :delete, :class=>"small" %> 
    </span>
  </p>

  <table>
    <tr>
      <th>Floor</th>
      <th>Length</th>
      <th>Height</th>
      <th>Sides</th>
      <th>Layers</th>
      <th>Material</th>
      <th>Total Area</th>
      <th></th>
    </tr>
  <%= form_for @line_item do |f| %>
    <%= f.error_messages %>
    <tr>
      <td><%= f.text_field :floor, :size => "3" %>
      <td><%= f.text_field :wall_length, :size => "5" %>
      <td><%= f.text_field :wall_height, :size => "5" %>
      <td><%= f.text_field :wall_sides, :size => "5" %>
      <td><%= f.text_field :wall_layers, :size => "5" %>
      <td><%= f.text_field :material, :size => "20" %>
      <td>
      <td><%= f.submit "Enter Measurement" %>
    </tr>
  <% end %>
      
      <% @line_items.each do |line_item| %>
      <tr class="takeoff_line_item">
        <td><%= line_item.floor %>
        <td><%= line_item.wall_length%> lft
        <td><%= line_item.wall_height %> lft
        <td><%= line_item.wall_sides %>
        <td><%= line_item.wall_layers %>
        <td><%= line_item.material %>
        <td><%= @total_area %> </td>
        <td><%= link_to "Edit", edit_line_item_path(line_item), :class => "small" %> </td>
      </tr>
      <% end -%>
      <tr >
        <td>
        <td>
        <td>
        <td>
        <td>
        <td>
        <td class="takeoff_line_item">area total   
      </tr>
  </table>
</div>
