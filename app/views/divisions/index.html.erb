<% title "Divisions" %>

<table>
  <tr>
    <th>Name</th>
    <th>Div Number</th>
    <th>Project</th>
  </tr>
  <% for division in @divisions %>
    <tr>
      <td><%= division.name %></td>
      <td><%= division.division_number %></td>
      <td><%= link_to "Show", division %></td>
      <td><%= link_to "Edit", edit_division_path(division) %></td>
      <td><%= link_to "Destroy", division, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Division", new_division_path %></p>
