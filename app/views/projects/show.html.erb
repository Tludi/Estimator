<div class="project_layout">
<% title "Project" %>

  <div class="project_info">
    <p>
      <h2><%= @project.name %></h2>
      <strong>Address:</strong>
      <%= @project.address %>
      <br />
      <strong>Owner:</strong>
      <%= @project.owner %>
      <br />
      <strong>Contractor:</strong>
      <%= @project.contractor %>
      <br />
      <strong>Bid Date:</strong>
      <%= @project.bid_date %>
      <br />
      <strong>Start Date:</strong>
      <%= @project.start_date %>
    </p>
    <div class="small">
      <%= link_to "Edit", edit_project_path(@project), :class=>"small" %> |
      <%= link_to "Delete", @project, :confirm => 'Are you sure?', :method => :delete, :class=>"small" %>
    </div>
  </div>
  <hr>
    <div class="takeoff_list">
      <h3>Current Takeoffs 
      <span><%= link_to "New Takeoff", new_takeoff_path, :class => "small", :project => @project.id %></span>
      </h3>
      <% @project.takeoffs.each do |t| %>
        <p>Division <%= t.division %> |
        <%= t.trade %>
        </p>
      <% end -%>
    </div>
  
</div>