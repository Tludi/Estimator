<% title "Admin Panel" %>
<h3>All Users</h3>
<table>
  <tr>
    <th>Name</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= link_to "Edit", edit_user_path(user) %></td>
      <td><%= link_to "Delete", user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>

</table>

<h3>wall types</h3>
<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for walltype in @walltypes %>
    <tr>
      <td><%= walltype.name %></td>
      <td><%= link_to "Edit", edit_walltype_path(walltype) %></td>
      <td><%= link_to "Delete", walltype, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>

</table>

